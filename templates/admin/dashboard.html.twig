            <div class="col-5 alert-info">
                <p><span class="display-6"> 0 </span> commandes passées aujourd'hui</p>
                <p>Total commandes passées: <span class="display-6"> {{ countAllCommande['value'] }} </span> </p>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                {% if commandesDuJour | length != null %}
                    <h2>Commandes passées les 7 derniers jours</h2>
                    <table class="table table-striped table-hover">
                        <thead class="table-success">
                            <tr>
                                <th>Date</th>
                                <th>Référence</th>
                                <th>Prix Total</th>
                                <th>Nom Prénom</th>
                                <th>Détail</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for commande in commandesDuJour %}
                                <tr>
                                    <td>{{ commande.date | date('d-m-Y')}}</td>
                                    <td>{{ commande.reference }}</td>
                                    <td>{{ commande.commande.prix }}€</td>
                                    {% if commande.client != null  %}
                                        <td>{{ commande.client }}</td>
                                    {% else %}
                                        <td></td>
                                    {% endif %}
                                    <td>Détail</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

