{% block body %}
    <div class="plante-details">
        <div>
            <img src="{{ asset('img/'~article.categorie.nom~'/' ~ article.images ) }}" alt="{{ article.nom }}">
        </div>
        <div class="plante-details-infos">
            <h2>{{ article.nom }}</h2>
            <br>
            <div class="detail-des-cat">Description: <br>{{ article.description }}</div>
            <div class="detail-des-cat">Categorie: {{ article.sousCategorie.nom }}</div>
            <br><br><br>
            <div class="details-prix">{{ article.prix }}â‚¬</div>
            <br><br>
            <div class="btn-detail">
