{% extends 'base.html.twig' %}

{% block title %}Mes factures! | {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">

            <div class="span3">

            </div>
            <div class="span9">

                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                {% for flashMessage in app.session.flashbag.get('error') %}
                    <div class="alert alert-errors">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                <h2>Vos commandes</h2>
                <p>L'historique de vos commandes n'est pas disponible</p>
                <h2>Vos factures</h2>
                <form>
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Références</th>
                            <th>Date</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if factures|length == 0 %}
                            <tr>
                                <td colspan="4"><center>Ancunne facture actuellement.</center></td>
                            </tr>
                        {% endif %}
                        {% for facture in factures %}
                            <tr>
                                <td>ref : {{ facture.reference }}</td>
                                <td>{{ facture.date|date('d/m/Y') }}</td>
                                <td>{{ facture.commande.prix }} €</td>
{#                                <td><a href="{{ path('profile_facturePDF', { 'id' : facture.id }) }}" target="_blank">PDF</a></td>#}
                                <td><a href="{{ path('test', { 'id' : facture.id }) }}" target="_blank">Télécharger votre facture</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </form>

            </div>

        </div>
    </div>
{% endblock %}
